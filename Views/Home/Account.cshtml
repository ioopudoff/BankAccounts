@model Transaction

<div class="container">
    <div class="row">
        <h1 class="col-sm-10">Приветствуем, @ViewBag.user.FirstName </h1>
        <a href="/logout" class="col-sm-2">Выйти</a>
    </div>
    <form action="/createtransaction" method="post">
        <input asp-for="UserId" type="hidden" value="@ViewBag.user.UserId">
        <input asp-for="Amount">
        <span asp-validation-for="Amount"></span>
        <input type="submit" value="Внести/Забрать">
    </form>
    <form>
        <label>Текущий баланс</label>
        <p>@ViewBag.Total</p>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Сумма операции</th>
                <th>Время проведения</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Transaction t in ViewBag.Trans)
            {
                <tr>
                    <td>@t.Amount</td>
                    <td>@t.CreatedAt</td>
                </tr>
            }
        </tbody>
    </table>

</div>
